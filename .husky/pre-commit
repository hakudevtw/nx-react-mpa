#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

branch="$(git rev-parse --abbrev-ref HEAD)"
if [ "$branch" = "master" ] || [ "$branch" = "main" ]; then
  echo "âŒ Aborting commit...\n"
  echo "ğŸ’€ You can't commit directly to master or main branch!\n"
  exit 1
fi

